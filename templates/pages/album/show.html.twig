{% extends 'base.html.twig' %}

{% block title %}Album
{% endblock %}

{% block body %}
	<h1>Album</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Name</th>
				<td>{{ album.name }}</td>
			</tr>

			<tr>
				<th>Description</th>
				<td>{{ album.description }}</td>
			</tr>

			<tr>
				<th>CreatedAt</th>
				<td>{{ album.creatAt ? album.creatAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>

			<tr>
				<th>Picture</th>
				<td>
					{% for picture in album.pictures %}
						<img src="{{ (picture.url) }}">
					{% endfor %}
				</td>
			</tr>
		</tbody>
	</tr>
</tbody></table><a href="{{ path('app_album') }}">back to list</a><a href="{{ path('app_album_edit', {id: album.id}) }}">edit</a><a href="{{ path('app_album_delete', {'id': album.id}) }}">Delete</a>{% endblock %}
