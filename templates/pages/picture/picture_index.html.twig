{% extends 'base.html.twig' %}

{% block title %}PictureController!
{% endblock %}

{% block body %}
	{% if is_granted('IS_AUTHENTICATED_FULLY') %}

		<h1>Picture index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Url</th>
					<th>Description</th>
					<th>AddedAt</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for picture in pictures %}
					<tr>
						<td>{{ picture.id }}</td>
						<td>{{ picture.name }}</td>
						<td>{{ picture.url }}</td>
						<td>{{ picture.description }}</td>
						<td>{{ picture.creatAt ? picture.creatAt|date('d-m-Y H:i:s') : '' }}</td>
						<td>
							<a href="{{ path('app_picture_show', {'id': picture.id}) }}">show</a>
							<a href="{{ path('app_picture_edit', {'id': picture.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_picture_new') }}">Create new</a>
	{% else %}
		<h2>You need to be connected</h2>
		<a href="{{ path('security.login') }}">Login</a>
	{% endif %}
{% endblock %}
