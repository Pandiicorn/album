{% extends 'base.html.twig' %}

{% block title %}Picture
{% endblock %}

{% block body %}
	<h1>Picture</h1>

	<table class="table">
		<tbody>
			<tr>
				<td>
					<img src="{{ picture.url }}">
				</td>
			</tr>
			<tr>
				<th>Id</th>
				<td>{{ picture.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ picture.name }}</td>
			</tr>
			<tr>
				<th>Url</th>
				<td>{{ picture.url }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ picture.description }}</td>
			</tr>
			<tr>
				<th>AddedAt</th>
				<td>{{ picture.creatAt ? picture.creatAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_picture_index') }}">back to list</a>

	<a href="{{ path('app_picture_edit', {'id': picture.id}) }}">edit</a>

	<a href="{{ path('app_picture_delete', {'id': picture.id}) }}">Delete</a>
{% endblock %}
